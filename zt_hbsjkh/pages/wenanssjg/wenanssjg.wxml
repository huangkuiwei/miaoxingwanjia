<view class='container'>
  <view class="view_sousuo" bindtap="go_sousuo">
    <view class="view_sousuo_input">
      <view class="view_sousuo_input_item" wx:for="{{keys_arr}}">
        <text>{{item}}</text>
        <image src="../../resource/img/icon_sousuo_close.png" bindtap="del_key" data-key="{{item}}"></image>
      </view>
    </view>
  </view>
  <scroll-view class='goods_fenlei' scrollWithAnimation="true" scroll-x="true">
    <text class="{{cur_fenlei_index==-1?'goods_fenlei_item_active':'goods_fenlei_item'}}" data-index='{{-1}}' bindtap='switchFenlei' style='color:{{mlib_style.fontcolor}};'>全部</text>
    <text wx:for="{{fenlei_muban}}" class="{{cur_fenlei_index==index?'goods_fenlei_item_active':'goods_fenlei_item'}}" data-index='{{index}}' bindtap='switchFenlei' style='color:{{mlib_style.fontcolor}};'>{{item.fenlei.name}}</text>
  </scroll-view>
  <view class="jieguo_title">
    <view class="{{cur_show_status==0?'jieguo_title_selection':'jieguo_title_selection_off'}}" bindtap="change_show_status" data-status="0">最新</view>
    <view class="jieguo_title_xian"></view>
    <view class="{{cur_show_status==1?'jieguo_title_selection':'jieguo_title_selection_off'}}" bindtap="change_show_status" data-status="1">最热</view>
    <view class="jieguo_title_num">{{cur_show_mubans.length}}个模板</view>
  </view>
	<view class="wenan_view" wx:if="{{cur_show_mubans.length!=0}}">
		<view class="wenan_item" wx:for="{{cur_show_mubans}}" style="{{index==0?'border:none;':''}}">
			<image class="wenan_tx" src="{{item.tx==''?setting.tx:item.tx}}"></image>
			<view class="wenan_right">
				<view class="wenan_right_top">
					<view class="wenan_right_top_left">
						<view class="wenan_nickname">{{item.nickname==''?setting.nickname:item.nickname}}</view>
						<view class="wenan_date">{{item.time}}</view>
					</view>
					<view class="wenan_right_top_right" bindtap="go_mianze">
						<image src="../../resource/img/icon_mianze_sm.png"></image>
						<view>免责声明</view>
					</view>
				</view>
				<view class="wenan_right_content">{{item.content}}</view>
				<view class="img_view">
					<image mode="widthFix" src="{{item.hbicon}}" bindtap="wanna_dingzhi" data-index="{{index}}">
					</image>
					<image mode="widthFix" src="{{shouye_info.imgshuiyin}}" class="img_shuiyin"></image>
				</view>
				<view class="wenan_btns">
					<view class="btns_item" bindtap="wanna_down" data-index="{{index}}">
						<image src="../../resource/img/icon_dz_copy.png"></image>
						<view>保存 {{item.download}}</view>
					</view>
					<view class="btns_item" bindtap="wanna_dingzhi" data-index="{{index}}">
						<image src="../../resource/img/icon_wenan_tp.png"></image>
						<view>制作海报</view>
					</view>
					<view class="btns_item">
						<image src="../../resource/img/icon_wenan_fx.png"></image>
						<view>分享</view>
						<button open-type="share" class="btn_share" style="opacity: 0;"></button>
					</view>
				</view>
			</view>
		</view>
	</view>
  <view class="jieguo_kong_view" wx:else>
    <image src="../../resource/img/icon_sousuo_kong.png"></image>
    <view>没有文案</view>
  </view>
</view>
<include src="./jieguo" />