.container{
  width: 750rpx;
  min-width: 100%;
  position: absolute;
  background-color: white;
}
.content_item{
  width: 690rpx;
  position: relative;
  left: 30rpx;
  margin-top: 50rpx;
}
.content_item_title{
  width: 690rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 40rpx;
}
.content_item_title .left{
  color: rgb(239, 65, 63);
  margin-right: 8rpx;
  margin-top: 8rpx;
}
.content_item_title .right{
  color: #333333;
  font-size: 30rpx;
}
.leixing_view{
  width: 675rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  left: 15rpx;
}
.leixing_view image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.leixing_view view{
  font-size: 28rpx;
  color: #333333;
  margin-right: 20rpx;
}
.fenlei_view{
  width: 660rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  left: 15rpx;
}
.fenlei_view text{
  color: #666666;
}
.fenlei_view image{
  height: 18rpx;
}
.content_view{
  width: 630rpx;
  height: 200rpx;
  border: 2rpx solid #999999;
  border-radius: 10rpx;
  padding: 15rpx;
  position: relative;
  left: 15rpx;
}
.content_view textarea{
  width: 630rpx;
  height: 200rpx;
}
.sucai_view{
  width: 660rpx;
  /* height: 150rpx; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  position: relative;
  left: 15rpx;
}
.sucai_view image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.sucai_view video{
  width: 150rpx;
  height: 150rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.sucai_view_item{
  width: 150rpx;
  height: 150rpx;
  background-color: #eaeaea;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.sucai_view_item .left{
  margin-bottom: 10rpx;
  font-size: 33rpx;
  color: #333333;
}
.sucai_view_item .right{
  color: #333333;
  font-size: 28rpx;
}
.foot{
  width:660rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  background:linear-gradient(-4deg,rgba(246,201,98,1),rgba(251,213,111,1),rgba(255,222,135,1));
  position: relative;
  left: 43rpx;
  font-size:32rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(0,0,0,1);
  border-radius: 45rpx;
  margin: 50rpx 0 50rpx 0;
}
.btn_go_upwenan{
  width: 110rpx;
  position: fixed;
  right: 15rpx;
  top: 0rpx;
}