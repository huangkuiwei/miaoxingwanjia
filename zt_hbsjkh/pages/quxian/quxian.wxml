<include src="../shouquan/shouquan"/>
<view  class="container">
  <view class='head'>
    <text style='border-right: solid #BBBBBB 1rpx;' class="{{show_status==0?'head_on':''}}" bindtap='change_status'>佣金结算</text>
    <text class="{{show_status==1?'head_on':''}}" bindtap='change_status'>结算记录</text>
  </view>
  <view class='jiesuan' wx:if="{{show_status==0}}">
    <view class='jiesuan_content'>
      <image src='../../resource/img/icon_quxian_qian.png'></image>
      <text>￥{{yue}}</text>
      <text style='font-size:28rpx;font-family:PingFangSC-Regular;font-weight:400;color:rgba(153,153,153,1);'>满{{setting.confine_credit2}}可提现佣金</text>
    </view>
    <text class='btn_jiesuan' bindtap='quxian'>佣金提现</text>
  </view>
  <view class='jiesuan_jilu' wx:if="{{show_status==1}}">
    <view class='jiesuan_jilu_item' wx:for="{{quxianjilu}}">
      <text class='item_name_on' wx:if="{{item.jine>0}}">{{item.remark}}</text>
      <text class='item_name' wx:else>{{item.remark}}</text>
      <text class='item_riqi'>{{item.time}}</text>
      <text class='item_jine_on' wx:if="{{item.jine>0}}">+{{item.jine}}</text>
      <text class='item_jine' wx:else>{{item.jine}}</text>
    </view>
  </view>
</view>
<form bindsubmit="aliquxian" wx:if="{{show_ali==1}}">
  <view class="info_view" bindtap="close_info_view">
    <view class="info_view_content" catchtap="ceshi">
      <view class="info_view_title">支付宝信息</view>
      <view class="info_input">
        <text>姓名</text>
        <input name='aliname' placeholder='请填写真实姓名' placeholder-class="info_input_placeholder"></input>
      </view>
      <view class="info_input">
        <text>支付宝账号</text>
        <input name='aliaccount' placeholder='请填写支付宝账号' placeholder-class="info_input_placeholder"
          style="width:450rpx;"></input>
      </view>
      <button formType="submit" class='info_foot'>立即提现</button>
    </view>
  </view>
</form>