<scroll-view class="container" bindscroll='on_change_fenlei'  scrollWithAnimation="true" scroll-y="true" bindscrolltolower="scroll_bottom">
	<view class="wenan_view">
		<view class="wenan_item" wx:for="{{wenan_info.d}}" style="{{index==0?'border:none;':''}}">
			<image class="wenan_tx" src="{{item.tx==''?setting.tx:item.tx}}"></image>
			<view class="wenan_right">
				<view class="wenan_right_top">
					<view class="wenan_right_top_left">
						<view class="wenan_nickname">{{item.nickname==''?setting.nickname:item.nickname}}</view>
						<view class="wenan_date">{{item.time}}</view>
					</view>
					<view class="wenan_right_top_right" bindtap="go_mianze">
						<image src="../../resource/img/icon_mianze_sm.png"></image>
						<view>免责声明</view>
					</view>
				</view>
				<view class="wenan_right_content">{{item.content}}</view>
				<view class="img_view">
					<image mode="widthFix" src="{{item.hbicon}}" bindtap="wanna_dingzhi" data-index="{{index}}">
					</image>
					<image mode="widthFix" src="{{shouye_info.imgshuiyin}}" class="img_shuiyin"></image>
				</view>
				<view class="wenan_btns">
					<view class="btns_item" bindtap="wanna_down" data-index="{{index}}" style="width:260rpx;">
						<image src="../../resource/img/icon_dz_copy.png"></image>
						<view>复制文案 {{item.download}}</view>
					</view>
					<view class="btns_item" bindtap="wanna_dingzhi" data-index="{{index}}">
						<image src="../../resource/img/icon_wenan_tp.png"></image>
						<view>制作海报</view>
					</view>
					<view class="btns_item" style="width:160rpx;">
						<image src="../../resource/img/icon_wenan_fx.png"></image>
						<view>分享</view>
						<button open-type="share" class="btn_share" style="opacity: 0;"></button>
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>
<image src="../../resource/img/icon_tougao.png" class="btn_tougao" bindtap="btn_tougao"></image>
<include src="./jieguo" />